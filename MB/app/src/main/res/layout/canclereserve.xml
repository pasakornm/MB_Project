<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Rev_ID"
        android:textStyle="bold"
        android:text="Reserve ID: "/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Rev_ID2"
        android:text="Reserve ID"
        android:layout_toRightOf="@id/Rev_ID"/>

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/Cuss_ID"
        android:text="Cus ID: "
        android:layout_below="@id/Rev_ID"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/Cuss_ID2"
        android:text="Cus ID"
        android:layout_below="@id/Rev_ID2"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/Cuss_ID"
        />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/Res_DT"
        android:layout_below="@id/Rev_ID"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="5dp"
        android:text="Reserve Date: "/>

    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/Res_DT2"
        android:layout_toRightOf="@id/Res_DT"
        android:layout_below="@id/Rev_ID"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="5dp"
        android:text="Reserve Date: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/In_DT"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Check In Date: "
        android:textStyle="bold"
        android:layout_below="@id/Res_DT"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/In_DT2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Check In Date: "
        android:layout_toRightOf="@id/In_DT"
        android:layout_below="@id/Res_DT"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Out_DT"
        android:layout_below="@id/In_DT"
        android:text="Check Out Date: "
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Out_DT2"
        android:layout_below="@id/In_DT"
        android:layout_toRightOf="@id/Out_DT"
        android:text="Check Out Date: "
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Total_PC"
        android:layout_below="@id/Out_DT"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="Total Price: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Total_PC2"
        android:layout_below="@id/Out_DT"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Total Price: "
        android:layout_toRightOf="@id/Total_PC" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reservecancle"
        android:text="ยกเลิกการจอง"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@id/Res_DT"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Room_Type"
        android:layout_below="@+id/Total_PC"
        android:text="Room Type: "
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Room_Type2"
        android:layout_toRightOf="@+id/Room_Type"
        android:layout_below="@id/Total_PC2"
        android:text="Room Type: "
        android:layout_marginBottom="5dp"
        />

</RelativeLayout>